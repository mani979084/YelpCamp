<% layout('layouts/boilerplate') %>
    <%- include('../partials/flashAlert') %>
        <style>
            .peopleCarouselImg {
                width: auto;
                height: 300px;
                max-height: 300px;
                display: flex;
                align-items: center;
            }
        </style>

        <div id='map' class="mb-2" style='width: 100%; height: 300px;'></div>

        <%for(let camp of campg){%>
            <div class="border-bottom">
                <div class="row">
                    <div class="col-md-4">
                        <div class="peopleCarouselImg carousel-inner">
                            <img class="img-fluid" src="<%=camp.images[0].url %> " alt="">

                        </div>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=camp.title %>
                            </h5>
                            <p class="card-text">
                                <%=camp.description %>
                            </p>

                            <p class="card-text"><small class="text-muted">
                                    <%=camp.location %>
                                </small></p>
                            <a class="btn btn-primary w-50" href="/campground/<%=camp.id %>">View <%=camp.title %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

                <script>
                    const mt = '<%-process.env.MAP_TOKEN%>'
                    const camps = { features:<%-JSON.stringify(campg) %>}
                </script>
                <script src="javascripts/cluster.js"></script>